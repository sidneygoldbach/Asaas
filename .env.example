# Configurações da API Asaas
# Para obter sua chave API:
# 1. Acesse https://www.asaas.com/
# 2. Faça login na sua conta
# 3. Vá em "Minha Conta" > "Integrações" > "API Key"
# 4. Copie sua chave e cole abaixo

# AMBIENTE DE PRODUÇÃO
ASAAS_API_KEY=sua_chave_api_producao_aqui
ASAAS_BASE_URL=https://api.asaas.com/v3

# AMBIENTE DE TESTES (SANDBOX)
# Para testes, use: https://sandbox.asaas.com/
# ASAAS_API_KEY=sua_chave_api_sandbox_aqui
# ASAAS_BASE_URL=https://api-sandbox.asaas.com/v3

# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações de Segurança
JWT_SECRET=seu_jwt_secret_muito_seguro_aqui
SESSION_SECRET=seu_session_secret_muito_seguro_aqui

# Configurações do Sistema
SISTEMA_NOME=Sistema de Administração de Imóveis
EMPRESA_NOME=Sua Empresa Ltda
EMPRESA_CNPJ=00.000.000/0001-00